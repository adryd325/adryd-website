---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "@/global.scss";

interface Props {
  frontmatter: Frontmatter;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import type { Frontmatter } from "@/Frontmatter";
const { frontmatter } = Astro.props;

const formattedTitle = frontmatter.title.startsWith("$")
  ? frontmatter.title.replace("$", "")
  : frontmatter.title + " | adryd.com";
---

<meta charset="utf-8" />

<!-- Font preloads -->
<link
  rel="preload"
  href="/static/fonts/pretendard/PretendardStdVariable.woff2"
  as="font"
  type="font/woff"
  crossorigin
/>
<link
  rel="preload"
  href="/static/fonts/source-serif-4-variable.woff2"
  as="font"
  type="font/woff"
  crossorigin
/>

<!-- Global Metadata -->
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{formattedTitle}</title>
<meta name="title" content={formattedTitle} />
<meta name="description" content={frontmatter.description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={formattedTitle} />
<meta property="og:description" content={frontmatter.description} />
<!-- {image && <meta property="og:image" content={new URL(image, Astro.url)} />} -->
<!-- Twitter -->

<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={formattedTitle} />
<meta property="twitter:description" content={frontmatter.description} />
<!-- {image && (
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:image" content={new URL(image, Astro.url)} />
)} -->

<!-- Seriously Apple??? -->
<meta name="format-detection" content="telephone=no">
<link rel="stylesheet" href="/static/compat/vars.css" />
